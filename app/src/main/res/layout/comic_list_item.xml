<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<com.example.lenovo.kuaikan.widget.glide.GlideImageView
    android:id="@+id/image_cover"
    android:layout_width="150dp"
    android:layout_height="100dp"
    app:placeholderImage="@mipmap/ic_common_placeholder_s_115"
    android:scaleType="fitXY"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="15dp"/>
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/black"
        tools:text="有梦想的人不睡觉"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintTop_toTopOf="@+id/image_cover"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/image_cover"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"/>
    <TextView
        android:id="@+id/tv_creat_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/image_cover"
        app:layout_constraintBottom_toBottomOf="@+id/image_cover"
        tools:text="2017.4.12"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="5dp"
        />
    <TextView
        android:id="@+id/tv_like_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/image_cover"
        tools:text="   12万"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="5dp"
        android:drawableLeft="@mipmap/ic_common_praise_normal"
        />
</android.support.constraint.ConstraintLayout>
