<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <com.example.lenovo.kuaikan.widget.XRecyclerview
            android:id="@+id/read_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp">
            <TextView
                android:id="@+id/tv_like"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="赞 0"
                android:gravity="center"
                android:drawableTop="@mipmap/ic_comic_like_normal"/>
            <TextView
                android:id="@+id/tv_comment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="评论"
                android:gravity="center"
                android:drawableTop="@mipmap/ic_comic_comment_normal"/>
            <TextView
                android:id="@+id/tv_subscribe"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="关注"
                android:gravity="center"
                android:drawableTop="@mipmap/ic_comic_subscribe_normal"/>
            <TextView
                android:id="@+id/tv_share"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="分享"
                android:gravity="center"
                android:drawableTop="@mipmap/ic_comic_share_normal"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/black"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="上一篇"
                android:padding="10dp"
                android:drawableLeft="@mipmap/ic_collection_pre_normal"
                android:gravity="center"/>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/black"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="下一篇"
                android:padding="10dp"
                android:drawableRight="@mipmap/ic_collection_next_normal"
                android:gravity="center"/>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:src="@mipmap/ic_personal_headportrait"
            android:layout_margin="10dp"/>
        <View
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="TA的主页"
            android:drawableRight="@mipmap/ic_collection_next_normal"
            android:layout_margin="10dp"
            android:gravity="center"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="   评论"
        android:textSize="16sp"
        android:gravity="center_vertical"
        android:drawableLeft="@mipmap/bg_rounded_corner_topic_list_tag"
        android:paddingLeft="15dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray"/>
    <com.example.lenovo.kuaikan.widget.XRecyclerview
        android:id="@+id/subscribe_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="查看更多评论"
        android:textSize="16sp"
        android:gravity="center_horizontal"
        android:paddingTop="15dp"/>
    </LinearLayout>
